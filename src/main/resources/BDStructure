CREATE TABLE USER
(
    ID         INT PRIMARY KEY AUTO_INCREMENT,
    NAME       VARCHAR(20) NOT NULL,
    LASTNAME   VARCHAR(20) NOT NULL,
    PASSWORD   VARCHAR(25) NOT NULL,
    CHECKLOGIN BOOLEAN default false
);

COMMENT ON TABLE USER IS 'Данные пользователей';
COMMENT ON COLUMN USER.ID IS 'Идентификатор пользователя';
COMMENT ON COLUMN USER.NAME IS 'Имя пользователя';
COMMENT ON COLUMN USER.LASTNAME IS 'Фамилия пользователя';
COMMENT ON COLUMN USER.PASSWORD IS 'Пароль';
COMMENT ON COLUMN USER.CHECKLOGIN IS 'Проверка логина пользователя';

CREATE TABLE CARD
(
    ID      INT PRIMARY KEY AUTO_INCREMENT,
    NUMBER  VARCHAR(16) NOT NULL
    ID_ACCOUNT INT
    FOREIGN KEY (ID_ACCOUNT) REFERENCES ACCOUNT (ID)
);

COMMENT ON TABLE CARD IS 'Таблица для кредитных карт пользователя';
COMMENT ON COLUMN CARD.ID IS 'Идентификатор карты';
COMMENT ON COLUMN CARD.NUMBER IS 'Номер карты';
COMMENT ON COLUMN ACCOUNT.ID_ACCOUNT IS 'Ключ связывающий счет с картой';

CREATE TABLE ACCOUNT
(
    ID      INT PRIMARY KEY AUTO_INCREMENT,
    SCORE   VARCHAR(20) NOT NULL,
    ID_USER INT,
    BALANCE INT,
    FOREIGN KEY (ID_USER) REFERENCES USER (ID)

);

COMMENT ON TABLE ACCOUNT IS 'Счета пользователя';
COMMENT ON COLUMN ACCOUNT.ID IS 'Идентификатор счета';
COMMENT ON COLUMN ACCOUNT.SCORE IS 'Номер счета';
COMMENT ON COLUMN ACCOUNT.ID_USER IS 'Ключ связывающий счет с пользователем';
COMMENT ON COLUMN ACCOUNT.BALANCE IS 'Баланс карты';

CREATE TABLE COUNTERPARTY
(
    ID       INT PRIMARY KEY AUTO_INCREMENT,
    FROMUSER VARCHAR  NOT NULL,
    TOUSER   VARCHAR  NOT NULL,
    SUM      INT NOT NULL
);

COMMENT ON TABLE COUNTERPARTY IS 'Таблица переводов денежных средств';
COMMENT ON COLUMN COUNTERPARTY.ID IS 'Идентификатор сделки';
COMMENT ON COLUMN COUNTERPARTY.FROMUSER IS 'ID пользователья кто отправляет деньги';
COMMENT ON COLUMN COUNTERPARTY.TOUSER IS 'ID получателя';